<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="News.View.NewsArticlePage">
	<ContentPage.Content>
        <StackLayout> 
            <Image x:Name="imgHeadLine"></Image>
            <Grid BackgroundColor="#2C3E50" >
                  <Label Margin="10, 0,10,5"  x:Name="lblTitle" TextColor="#FEFEFE"></Label>    
            </Grid>
            <Label x:Name="lblDescription" Margin="0, 25,0,0" TextColor="#2C3E50"></Label> 
            <Label x:Name="lblSource"></Label>
            <Label x:Name="lblAuthor"  Margin="0, 20,0,0"></Label>    
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
